@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;

@{
    var content = (ContentModels.AboutTestimonialsSection)Model.Content;

    var kicker = !string.IsNullOrWhiteSpace(content.TestimonalsTextTwo)
        ? content.TestimonalsTextTwo
        : "Great reviews for our services";

    var title = !string.IsNullOrWhiteSpace(content.TestimonalsTitle)
        ? content.TestimonalsTitle
        : "Trusted by some Biggest Names";

    var body = !string.IsNullOrWhiteSpace(content.TestimonalsText)
        ? content.TestimonalsText
        : "Seamlessly visualize quality intellectual capital without superior collaboration and idea-sharing. Holistically pontificate installed base portals.";

    var signature = !string.IsNullOrWhiteSpace(content.TestimonalsSignature)
        ? content.TestimonalsSignature
        : "Kevin Gardner";

    var bank = !string.IsNullOrWhiteSpace(content.TestimonalsBank)
        ? content.TestimonalsBank
        : "Swebank";
}

<section class="about-testimonials-section bg-white-100">
    <div class="px-4 max-w-7xl mx-auto" style="position: relative; padding: 80px 0 72px 0; overflow: visible;">
        <div style="position: relative; z-index: 1; max-width: 520px;">
            <p class="tracking-wide" style="font-size: 12px; letter-spacing: 0.24em; color: #C7B199; text-transform: uppercase; line-height: 1.9;">@title</p>

            @if (!string.IsNullOrWhiteSpace(body))
            {
                <p style="margin-top: 5px; font-size: 48px; line-height: 1.15; font-weight: 700; color: var(--color-primary); letter-spacing: -0.015em;">@body</p>
            }

            <p style="margin-top: 30px; font-size: 20px; font-style: italic; line-height: 1.6; color: var(--color-body-text-100);">@kicker</p>

            @if (content.TestimonalsStars != null)
            {
                <div style="margin-top: 20px;">
                    <img src="@content.TestimonalsStars.Url()" alt="Testimonial rating" style="width: 95px; height: 14px; display: block; object-fit: contain;" />
                </div>
            }

            <div style="margin-top: 25px; display:flex; flex-direction:column; gap:6px;">
                <p style="font-size: 14px; font-weight: 400; color: #2D303A;">@signature</p>
                <p style="font-size: 20px; font-style: italic; font-weight: 500; color: #2D303A; font-family: 'Poppins', var(--font-poppins, sans-serif);">@bank</p>
            </div>
        </div>

        @if (content.TestimonialsImage != null)
        {
            <div class="rounded-md overflow-hidden" style="position: absolute; top: 0; bottom: 0; right: -300px; width: clamp(320px, 48vw, 895px);">
                <img src="@content.TestimonialsImage.Url()" alt="@signature" style="width: 100%; height: 100%; object-fit: cover; display: block;" />
            </div>
        }
    </div>
</section>

