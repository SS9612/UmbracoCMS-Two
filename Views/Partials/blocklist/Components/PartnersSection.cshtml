@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
    var content = (ContentModels.PartnersSection)Model.Content;
    var partnerItems = content.PartnerItems;
}

<section class="py-16 bg-neutral" style="margin-top: 50px;">
    <div class="w-full mx-auto px-4">
        <div class="flex flex-wrap gap-10 items-center justify-center">
            @if (partnerItems != null && partnerItems.Any())
            {
                @foreach (var item in partnerItems)
                {
                    var partner = (ContentModels.PartnerItem)item.Content;
                    @if (partner.PartnerLogo != null)
                    {
                        <img src="@partner.PartnerLogo.Url()" 
                             alt="Partner logo" 
                             style="width: auto !important; height: auto !important; max-height: 80px !important;"
                             class="object-contain grayscale opacity-60 hover:opacity-100 transition-opacity" />
                    }
                }
            }
        </div>
    </div>
</section>

