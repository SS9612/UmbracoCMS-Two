@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;

@{
    var content = (ContentModels.AboutContactSection)Model.Content;
}

<section class="py-28 about-contact-section bg-neutral-100">
    <div class="max-w-7xl mx-auto px-4">
        <div class="flex gap-16 items-stretch" style="width: 100%; max-width: 1200px;">
            <div class="relative" style="width: 48%; flex-shrink: 0;">
                @if (content.ContactRectangle != null)
                {
                    <img src="@content.ContactRectangle.Url()" alt="" class="absolute" style="z-index: 1; width: 78%; height: auto; left: 0%; bottom: -112px;" />
                }
                @if (content.ContactDots != null)
                {
                    <img src="@content.ContactDots.Url()" alt="" class="absolute -z-10" style="width: 31%; height: auto; right: 32%; bottom: -112px;" />
                }
                else
                {
                    <img src="/images/Dot.png" alt="" class="absolute -z-10" style="width: 31%; height: auto; right: 32%; bottom: -112px;" />
                }
                @if (content.ContactImage != null)
                {
                    <img src="@content.ContactImage.Url()" alt="Contact" class="absolute" style="left: 0; bottom: -112px; width: 66%; height: auto; z-index: 10;" />
                }
            </div>

            <div style="width: 52%; flex-shrink: 0;">
                @{
                    var title = !string.IsNullOrWhiteSpace(content.ContactSectionTitle)
                        ? content.ContactSectionTitle
                        : "Let us know about your next project";

                    var address = !string.IsNullOrWhiteSpace(content.OfficeLocation)
                        ? content.OfficeLocation
                        : "Klarabergsviadukten 90, 111 52 Stockholm";

                    var phone = !string.IsNullOrWhiteSpace(content.ContactPhone)
                        ? content.ContactPhone
                        : "+46 8 123 456 75";

                    var email = !string.IsNullOrWhiteSpace(content.ContactEmail)
                        ? content.ContactEmail
                        : "sales@onatrix.com";
                }

                <h2 class="text-heading" style="font-size: 40px; line-height: 1.2; font-weight: 700; color: var(--color-primary); letter-spacing: -0.01em; max-width: 440px; margin-bottom: 30px;">@title</h2>

                <div class="text-body-text-100" style="display:flex; flex-direction:column; row-gap:30px;">
                    @if (!string.IsNullOrWhiteSpace(content.OfficeLocation))
                    {
                        <div class="flex items-start gap-4">
                            <span aria-hidden="true" class="mt-1.5" style="display:inline-flex;">
                                <svg width="22" height="22" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M12 22s7-7.28 7-12a7 7 0 1 0-14 0c0 4.72 7 12 7 12Z" stroke="#B9805A" stroke-width="1.6" fill="none"/>
                                    <circle cx="12" cy="10" r="2.5" stroke="#B9805A" stroke-width="1.6"/>
                                </svg>
                            </span>
                            <div>
                                <p class="text-body-text" style="font-size: 14px; font-weight: 600;">Office location</p>
                                <p class="text-body-text-100" style="margin-top: 4px; font-size: 14px; font-style: italic; font-weight: 400;">@address</p>
                            </div>
                        </div>
                    }

                    @if (!string.IsNullOrWhiteSpace(content.ContactPhone))
                    {
                        <div class="flex items-start gap-4">
                            <span aria-hidden="true" class="mt-1.5" style="display:inline-flex;">
                                <svg width="22" height="22" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M6.62 10.79a15.053 15.053 0 0 0 6.59 6.59l2.2-2.2a1 1 0 0 1 1.01-.24c1.11.37 2.31.56 3.58.56a1 1 0 0 1 1 1v3.5a1 1 0 0 1-1 1C11.3 21 3 12.7 3 2.99a1 1 0 0 1 1-1H7.5a1 1 0 0 1 1 1c0 1.27.19 2.47.56 3.58a1 1 0 0 1-.24 1.01l-2.2 2.21Z" stroke="#B9805A" stroke-width="1.6" fill="none"/>
                                </svg>
                            </span>
                            <div>
                                <p class="text-body-text" style="font-size: 14px; font-weight: 600;">Phone number</p>
                                <p class="text-body-text-100" style="margin-top: 4px; font-size: 14px; font-style: italic; font-weight: 400;">@phone</p>
                            </div>
                        </div>
                    }

                    @if (!string.IsNullOrWhiteSpace(content.ContactEmail))
                    {
                        <div class="flex items-start gap-4">
                            <span aria-hidden="true" class="mt-1.5" style="display:inline-flex;">
                                <svg width="22" height="22" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M3 7a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2v10a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V7Z" stroke="#B9805A" stroke-width="1.6" fill="none"/>
                                    <path d="m4 7 8 6 8-6" stroke="#B9805A" stroke-width="1.6" fill="none"/>
                                </svg>
                            </span>
                            <div>
                                <p class="text-body-text" style="font-size: 14px; font-weight: 600;">E-mail address</p>
                                <p class="text-body-text-100" style="margin-top: 4px; font-size: 14px; font-style: italic; font-weight: 400;">@email</p>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>


