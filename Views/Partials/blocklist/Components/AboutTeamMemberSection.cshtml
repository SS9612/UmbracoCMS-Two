@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>;
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;

@{
    var content = (ContentModels.AboutTeamMemberSection)Model.Content;
}

<section class="py-28 about-team-member-section">
    <div class="max-w-7xl mx-auto px-4 flex justify-center">
        <div class="flex gap-10 items-start" style="width: 100%; max-width: 1200px;">
            
            <div class="flex flex-col" style="width: 28%; flex-shrink: 0;">
                @if (content.PersonImage != null)
                {
                    <div class="about-team-member-img" style="width: 100%;">
                        <img src="@content.PersonImage.Url()" alt="@(content.SignatureText ?? "Team member")" style="width: 100% !important; height: auto !important; display: block !important; max-width: 100% !important;" />
                    </div>
                }
                
                @if (!string.IsNullOrWhiteSpace(content.SignatureText))
                {
                    <p class="text-sm text-body-text-100 mt-4">
                        @content.SignatureText
                    </p>
                }
            </div>

            <div class="flex flex-col" style="width: 72%; flex-shrink: 0; justify-content: flex-start;">
                @if (content.QuoteText != null)
                {
                    <div class="rte text-body-text italic text-[1.5rem] mb-6 leading-relaxed" style="line-height: 1.6; max-width: 76%;">
                        @Html.Raw(content.QuoteText)
                    </div>
                }
                
                @{
                    var bodyText = content.Value<Umbraco.Cms.Core.Strings.IHtmlEncodedString>("bodyText");
                }
                @if (bodyText != null)
                {
                    <div class="rte text-body-text-100" style="line-height: 1.8;">
                        @Html.Raw(bodyText)
                    </div>
                }
            </div>

        </div>
    </div>
</section>

