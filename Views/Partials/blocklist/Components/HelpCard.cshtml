@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;

@{
    var content = (ContentModels.HelpCard)Model.Content;

    var title = !string.IsNullOrWhiteSpace(content.HelpCardTitle)
        ? content.HelpCardTitle
        : "How can we help you?";

    var text = !string.IsNullOrWhiteSpace(content.HelpCardText)
        ? content.HelpCardText
        : "online support 24/7, we are here to help you";

    var emailPlaceholder = !string.IsNullOrWhiteSpace(content.HelpCardEmail)
        ? content.HelpCardEmail
        : "E-mail address";

    var mailImage = content.HelpCardMailImage;
}

<div class="help-card relative overflow-hidden" style="background-color: #56615D; color: #FFFFFF; width: min(100%, 306px); min-height: 223px; padding: 36px 32px; border-radius: 12px; margin-top: 45px;">
    <div style="display: flex; flex-direction: column; gap: 20px; height: 100%;">
        <h3 style="font-size: 24px; line-height: 1.3; font-weight: 700; letter-spacing: -0.01em; margin: 0; color: #F5ECD2; background-color: transparent;">@title</h3>
        <p style="font-size: 14px; line-height: 1.6; font-weight: 400; color: #ffffff; margin: 0; background-color: transparent;">@text</p>

        <div class="flex items-center mt-auto" role="presentation" style="max-width: 100%; background-color: #FFFFFF; border: 1px solid #D2D7D6; border-radius: 6px; padding-right: 8px; height: 48px;">
            <span class="sr-only">Email address</span>
            <input
                type="text"
                value="@emailPlaceholder"
                readonly
                tabindex="-1"
                style="flex: 1; border: none; background-color: transparent; font-size: 13px; line-height: 48px; height: 48px; font-style: italic; color: #9EA4A1; padding: 0 16px;" />
            <span style="display: flex; align-items: center; justify-content: center; width: 48px; height: 48px; background-color: transparent;">
                <svg width="22" height="22" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M4 5h16a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H4a1 1 0 0 1-1-1V6a1 1 0 0 1 1-1Z" stroke="#3E443F" stroke-width="1.4" stroke-linecap="round" stroke-linejoin="round" />
                    <path d="m4 6 8 6 8-6" stroke="#3E443F" stroke-width="1.4" stroke-linecap="round" stroke-linejoin="round" />
                </svg>
            </span>
        </div>
    </div>

    @if (mailImage != null)
    {
        <img src="@mailImage.Url()" alt="" class="absolute" style="right: -32px; bottom: -36px; width: 196px; height: auto; opacity: 0.95;" />
    }
</div>
